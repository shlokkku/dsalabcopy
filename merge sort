#include <stdio.h>

void merge(int a[], int u, int m, int l);

void mergesort(int a[], int u, int l) {
    if (u < l) {
        int m = (u + l) / 2;
        mergesort(a, u, m);
        mergesort(a, m + 1, l);
        merge(a, u, m, l);
    }
}

void merge(int a[], int u, int m, int l) {
    int b[l];
    int i, j, k;
    i = u;
    j = m + 1;
    k = u;
    while (i <= m && j <= l) {
        if (a[i] <= a[j]) {
            b[k] = a[i];
            i++;
            k++;
        } else {
            b[k] = a[j];
            j++;
            k++;
        }
    }
    if (i > m) {
        while (j <= l) {
            b[k] = a[j];
            j++;
            k++;
        }
    } else {
        while (i <= m) {
            b[k] = a[i];
            i++;
            k++;
        }
    }
    for (i = u; i <= l; i++) {
        a[i] = b[i];
    }
}

int main() {
    int a[10];
    printf("Enter the number of elements: ");

    int i;
    for (i = 0; i < 10; i++)
        scanf("%d", &a[i]);

    int size = sizeof(a) / sizeof(a[0]);
    int u = 0;
    int l = size - 1;
    mergesort(a, u, l);

    printf("Sorted array: ");
    for (i = 0; i < size; i++)
        printf("%d ", a[i]);

    return 0;
}
